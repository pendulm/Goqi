<% if notice %>
<p><%= notice %></p>
<% end %>
<%= form_tag login_path do %>
  <%= field_set_tag '欢迎回来' do %>
    <div class="field">
      <%= label_tag 'email', '邮箱' %>
      <%= email_field_tag 'email', nil, required: true, autofocus: true %><br />
    </div>
    <div class="field">
      <%= label_tag 'password', '密码' %>
      <%= password_field_tag 'password', nil, required: true %><br />
    </div>
    <div class="action">
      <%= submit_tag '登录' %>&nbsp;&nbsp;<%= check_box_tag 'remember_me', 'yes', true %>记住我
    </div>
  <% end %>
<% end %>
